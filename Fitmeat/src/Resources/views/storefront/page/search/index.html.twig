{% sw_extends '@Storefront/storefront/page/search/index.html.twig' %}

{% block base_content %}
    {% block page_search %}
        <div class="cms-page search-page">
            {% block page_search_headline %}
               {{ parent() }}
            {% endblock %}
         <div class="row">
             <div class="cms-element-sidebar-filter col-lg-4 col-xl-2">
                 <div id="filter-panel-wrapper"
                      class="filter-panel-wrapper"
                      data-offcanvas-filter-content="true">
                     <div class="filter-title-desctop desctop_view">
                         {{ "listing.filterTitleText"|trans }}

                         {% sw_icon 'sliders-horizontal' %}
                     </div>
                     {% sw_include '@Storefront/storefront/component/listing/filter-panel.html.twig' with {
                         listing: page.listing,
                         sidebar: true
                     } %}
                 </div>
             </div>
             <div class="col-sm-12 col-lg-8 col-xl-10">
                 {% sw_include '@Storefront/storefront/page/search/search-pagelet.html.twig' with { page: page } %}
             </div>
         </div>
        </div>
    {% endblock %}
{% endblock %}
