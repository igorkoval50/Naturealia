{% sw_extends '@Storefront/storefront/page/content/index.html.twig' %}

{% block base_main_inner %}
    <div class="container-main">
        {# Listing head #}
        {% if page.cmsPage.name == 'Default category custom' %}
            <div class="listing-head">
                <div class="listing-head-col listing-title">
                    <h1>
                        {% if page.header.navigation.active.customFields.custom_category_title %}
                            {{ page.header.navigation.active.customFields.custom_category_title|raw }}
                        {% else %}
                            {{ page.header.navigation.active.name|raw }}
                        {% endif %}
                    </h1>
                </div>
                {% if page.header.navigation.active.customFields.custom_category_desc %}
                    <div class="listing-head-col listing-content">
                        <div class="listing-content-text">{{ page.header.navigation.active.customFields.custom_category_desc|raw }}</div>
                        <button type="button" class="listing-content-action">
                            <span class="open">{{ "listing.arrowText"|trans }}</span> <span class="closeTxt">{{ "listing.arrowTextClose"|trans }}</span>
                        </button>
                    </div>
                {% endif %}
            </div>
        {% endif %}
        {% block page_content %}
            {# @deprecated tag:v6.4.0 class `cms-breadcrump` use `cms-breadcrumb` instead #}
{#            <div class="breadcrumb cms-breadcrumb cms-breadcrump container">#}
{#                {% block cms_breadcrumb %}#}
{#                    {% sw_include '@Storefront/storefront/component/listing/breadcrumb.html.twig' with {#}
{#                        context: context,#}
{#                        navigationTree: page.header.navigation.tree,#}
{#                        category: page.header.navigation.active#}
{#                    } only %}#}
{#                {% endblock %}#}
{#            </div>#}
            <div class="cms-page">
                {% block page_content_blocks %}
                    {% sw_include "@Storefront/storefront/page/content/detail.html.twig" with {'cmsPage': page.cmsPage} %}
                {% endblock %}
            </div>
        {% endblock %}
    </div>
{% endblock %}
