{% sw_extends '@SwagPayPal/storefront/component/ecs-spb-checkout/ecs-button.html.twig' %}
{% block swag_paypal_ecs_button %}
    {% if context.salesChannel.customFields.custom_min_price_value < page.cart.price.positionPrice %}
        <div class="{{ button_class }}"
             data-swag-paypal-express-button="true"
             data-swag-pay-pal-express-button-approve-payment-token="{{ sw_csrf('payment.paypal.approve_payment', {"mode": "token"}) }}"
             data-swag-pay-pal-express-button-options="{{ expressSettings|json_encode }}"
             data-swag-pay-pal-add-error-token="{{ sw_csrf('payment.paypal.add_error', {"mode": "token"}) }}">
        </div>
    {% endif %}
{% endblock %}
