{% sw_extends '@Storefront/storefront/component/listing/filter/filter-multi-select-list-item.html.twig' %}

{% block component_filter_multi_select_list_item %}
    {% if loop.index == 1 %}
        <div class="custom-control custom-checkbox">
                <input type="checkbox"
                       class="custom-control-input filter-multi-select-checkbox"
                       data-label="{{ element.translated.title }}"
                       value="{{ element.id }}{{ loop.index }}"
                       id="{{ element.id }}{{ loop.index }}">

                <label class="filter-multi-select-item-label custom-control-label active all-filter" for="{{ element.id }}{{ loop.index }}">
                        {{ 'netzp.blog.all'|trans }}
                </label>
        </div>
    {% endif %}

    <div class="custom-control custom-checkbox">
        {% block component_filter_multi_select_list_item_checkbox_input %}
            <input type="checkbox"
                   class="custom-control-input filter-multi-select-checkbox"
                   data-label="{{ element.translated.title }}"
                   value="{{ element.id }}"
                   id="{{ element.id }}">
        {% endblock %}

        {% block component_filter_multi_select_list_item_label_element %}
            <label class="filter-multi-select-item-label custom-control-label" for="{{ element.id }}">
                {% block component_multi_select_list_item_label %}
                    {{ element.translated.title }}
                {% endblock %}
            </label>
        {% endblock %}
    </div>
{% endblock %}
